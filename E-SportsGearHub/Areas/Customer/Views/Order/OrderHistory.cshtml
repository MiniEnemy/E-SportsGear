@model IEnumerable<ESports_Models.OrderHeader>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-5">
    <h2>My Orders</h2>

    @if (!Model.Any())
    {
        <p>You have no orders yet.</p>
    }
    else
    {
        <table class="table table-striped table-dark">
            <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Total</th>
                <th>Status</th>
                <th>Payment Status</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
                    <td>Rs. @order.OrderTotal</td>
                    <td>@order.Status</td>
                    <td>@order.PaymentStatus</td>
                    <td>
                        <a asp-area="Customer" asp-controller="Order" asp-action="OrderConfirmation" asp-route-orderId="@order.Id" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>