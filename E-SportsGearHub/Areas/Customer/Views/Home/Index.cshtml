@model IEnumerable<ESports_Models.Product>
@{
    ViewData["Title"] = "Home";
    var topVisited = ViewBag.TopVisitedProducts as List<ESports_Models.Product>;
    var randomPicks = ViewBag.RandomProducts as List<ESports_Models.Product>;
}

<div class="container mt-5 text-light">
    <h2 class="neon-text mb-4">🏆 Top Recommendations</h2>
    <div class="row">
        @if (topVisited != null && topVisited.Any())
        {
            foreach (var product in topVisited)
            {
                <div class="col-md-4 mb-4">
                    <div class="card bg-dark border-neon shadow-lg h-100">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" />
                        <div class="card-body">
                            <h5 class="card-title text-neon">@product.ProductName</h5>
                            <p class="card-text">@product.Description?.Substring(0, Math.Min(product.Description.Length, 100))...</p>
                            <p class="text-neon">Rs. @product.Price.ToString("F2")</p>

                            @if (product.Stock == 0)
                            {
                                <span class="badge bg-danger text-uppercase">Out of Stock</span>
                            }
                            else
                            {
                                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id" class="btn btn-outline-neon">View</a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No recommendations available yet.</p>
        }
    </div>

    <hr class="neon-divider" />

    <h2 class="neon-text mb-4">🎲 Random Picks</h2>
    <div class="row">
        @if (randomPicks != null && randomPicks.Any())
        {
            foreach (var product in randomPicks)
            {
                <div class="col-md-4 mb-4">
                    <div class="card bg-dark border-neon shadow-lg h-100">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" />
                        <div class="card-body">
                            <h5 class="card-title text-neon">@product.ProductName</h5>
                            <p class="card-text">@product.Description?.Substring(0, Math.Min(product.Description.Length, 100))...</p>
                            <p class="text-neon">Rs. @product.Price.ToString("F2")</p>

                            @if (product.Stock == 0)
                            {
                                <span class="badge bg-danger text-uppercase">Out of Stock</span>
                            }
                            else
                            {
                                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id" class="btn btn-outline-neon">View</a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
