        flex-direction: column;
        gap: 25px;
    }

    /* Description styling */
    .product-description {
        position: relative;
        padding-left: 15px;
    }

    .description-marker {
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 4px;
        background-color: #111111;
    }

    /* Price styling */
    .price-container {
        margin-top: 10px;
    }

    .price-label {
        display: inline-block;
        background-color: #111111;
        color: #ffffff;
        padding: 10px 25px;
        font-size: 18px;
        font-weight: 700;
        border-radius: 5px;
    }

    /* Quantity selector styling */
    .quantity-container {
        margin-top: 10px;
    }

    .quantity-selector {
        display: flex;
        align-items: center;
        max-width: 200px;
    }

    .quantity-label {
        background-color: #111111;
        color: #ffffff;
        padding: 10px 15px;
        font-size: 14px;
        font-weight: 600;
        border-radius: 5px 0 0 5px;
        margin: 0;
    }

    .quantity-input {
        border: 1px solid #111111;
        padding: 9px;
        width: 70px;
        text-align: center;
        font-weight: 600;
        border-radius: 0 5px 5px 0;
    }

    /* Add to cart button styling */
    .cart-button-container {
        margin-top: 15px;
    }

    .add-to-cart-button {
        background-color: #111111;
        color: #ffffff;
        border: none;
        padding: 15px 25px;
        font-size: 14px;
        font-weight: 700;
        text-transform: uppercase;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
        max-width: 300px;
    }

        .add-to-cart-button:hover {
            background-color: #ff0036;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 0, 54, 0.3);
        }

    /* Responsive design */


    .product-image-container {
        flex: 0 0 100%;
    }

    }
</style>