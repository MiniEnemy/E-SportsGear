@model Product
<form method="post">
    <div class="product-container mt-4">
        <!-- Product header matches existing site style -->
        <div class="product-header">
            <h1 class="product-title">@Model.ProductName</h1>
            <p class="product-category">@Model.Category.Name</p>
            <div class="red-separator"></div>
        </div>

        <div class="content-area">
            <!-- Back to home button similar to existing site -->
            <div class="back-button-container">
                <a asp-action="Index" class="back-button">
                    BACK TO HOME
                </a>
            </div>

            <div class="product-content">
                <!-- Product image with HOT badge -->
                <div class="product-image-container">
                    <img src="@Model.ImageUrl" class="product-image" alt="@Model.ProductName" />
                    @* <div class="hot-badge">HOT</div> *@
                </div>

                <!-- Product details -->
                <div class="product-details">
                    <!-- Product description -->
                    <div class="product-description">
                        <div class="description-marker"></div>
                        <p>@Html.Raw(Model.Description)</p>
                    </div>

                    <!-- Price display -->
                    <div class="price-container">
                        <span class="price-label">$@Model.Price.ToString("F2")</span>
                    </div>

                    <!-- Quantity selector -->
                    <div class="quantity-container">
                        <div class="quantity-selector">
                            <label class="quantity-label">Quantity</label>
                            <input type="number" name="count" value="1" min="1" class="quantity-input" />
                        </div>
                    </div>

                    <!-- Add to cart button -->
                    <div class="cart-button-container">
                        <button type="submit" class="add-to-cart-button">
                            ADD TO CART
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<style>
    /* E_SPORTSGEARHUB Product Detail Styling */
    body {
        background-color: #ffffff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
