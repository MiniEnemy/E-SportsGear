@model ESports_Models.ViewModels.ProductVM

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Product.ImageUrl" class="img-fluid" alt="@Model.Product.ProductName" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Product.ProductName</h2>
            <p>@Model.Product.Description</p>
            <p><strong>Price:</strong> Rs. @Model.Product.Price</p>

            @if (Model.Product.Stock == 0)
            {
                <p class="text-danger fw-bold">Out of Stock</p>
            }
            else
            {
                <p class="text-success fw-bold">@Model.Product.Stock items left in stock</p>
            }

            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                <input type="hidden" name="productId" value="@Model.Product.Id" />
                <div class="form-group mb-3">
                    <label for="count">Quantity:</label>
                    <input type="number" class="form-control" name="count" value="1" min="1" max="@Model.Product.Stock"
                           @(Model.Product.Stock == 0 ? "disabled" : "") />
                </div>

                <button type="submit" class="btn btn-primary" @(Model.Product.Stock == 0 ? "disabled" : "")>
                    Add to Cart
                </button>
            </form>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-3">@TempData["Error"]</div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success mt-3">@TempData["Success"]</div>
            }
        </div>
    </div>
</div>


<link rel="stylesheet" href="~/css/Details.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />