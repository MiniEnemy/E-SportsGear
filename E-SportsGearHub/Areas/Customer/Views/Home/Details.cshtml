@model ESports_Models.ViewModels.ProductVM

@{
    ViewData["Title"] = "Product Details";
}
<link href="/css/Detaiils2.css" rel="stylesheet" />
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Product.ImageUrl" class="img-fluid" alt="@Model.Product.ProductName" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Product.ProductName</h2>
            <p>@Model.Product.Description</p>
            <p><strong>Price:</strong> Rs. @Model.Product.Price</p>

            @if (Model.Product.Stock == 0)
            {
                <p class="text-danger fw-bold">Out of Stock</p>
            }
            else
            {
                <p class="text-success fw-bold">@Model.Product.Stock items left in stock</p>
            }

            <form asp-action="AddToCart" asp-controller="Cart" method="post" class="mt-3">
                <input type="hidden" name="productId" value="@Model.Product.Id" />

                <div class="form-group mb-3">
                    <label asp-for="Product.Stock" class="form-label">Quantity:</label>
                    <input type="number" name="count" value="1" min="1" max="@Model.Product.Stock"
                           class="form-control"
                           @(Model.Product.Stock == 0 ? "disabled" : "") />
                </div>

                <button type="submit" class="btn btn-success w-100"
                        @(Model.Product.Stock == 0 ? "disabled" : "")>
                    <i class="bi bi-cart-plus"></i> Add to Cart
                </button>

                @if (Model.Product.Stock == 0)
                {
                    <div class="text-danger mt-2">Out of Stock</div>
                }
            </form>


            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-3">@TempData["Error"]</div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success mt-3">@TempData["Success"]</div>
            }
        </div>
    </div>
</div>


<link rel="stylesheet" href="~/css/Details.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />