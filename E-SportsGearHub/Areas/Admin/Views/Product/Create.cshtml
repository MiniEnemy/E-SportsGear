@model Product

<form method="post" class="bg-light shadow-sm p-4 rounded">
    <h2 class="text-primary mb-4">Create Product</h2>
    
    <div class="mb-3">
        <label asp-for="ProductName" class="form-label fw-bold"> Product Name</label>
        <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
        <span asp-validation-for="ProductName" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CompanyName" class="form-label fw-bold">Display Order</label>
        <input asp-for="CompanyName" class="form-control" placeholder="Enter display order" />
        <span asp-validation-for="CompanyName" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label fw-bold">Display Order</label>
        <input asp-for="Description" class="form-control" placeholder="Enter display order" />
        <span asp-validation-for="Description" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label fw-bold">Display Order</label>
        <input asp-for="Price" class="form-control" placeholder="Enter display order" />
        <span asp-validation-for="Price" class="text-danger small"></span>
    </div>
    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow-sm">Create</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary px-4 py-2 rounded-pill shadow-sm">
            Back to List
        </a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}