@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3 align-items-center">
        <div class="col-md-6">
            <h2 class="fw-bold">
                <i class="bi bi-joystick text-primary me-2"></i> Gaming Products
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-circle-fill me-1"></i> Create New Product
            </a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body p-0">
            <table id="tblData"class="table table-hover mb-0" style="width:100%">
                <thead>
                    <tr class="bg-light text-dark">
                        <th class="fw-bold ps-4" style="width: 20%">Product Name</th>
                        <th class="fw-bold" style="width: 15%">Company</th>
                        <th class="fw-bold" style="width: 45%">Description</th>
                        <th class="fw-bold" style="width: 15%">Category</th>
                        <th class="fw-bold" style="width: 10%">Price</th>
                        <th class="fw-bold text-center" style="width: 20%">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<style>
    /* Clean, subtle gaming-inspired styling */
    h2 {
        letter-spacing: 0.5px;
    }

    .table {
        border-collapse: separate;
        border-spacing: 0;
    }

        .table thead th {
            border-top: none;
            border-bottom: 2px solid #dee2e6;
            text-transform: uppercase;
            font-size: 14px;
            letter-spacing: 0.5px;
            padding-top: 16px;
            padding-bottom: 16px;
        }

        .table tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.04);
        }

    .btn-outline-primary {
        border-width: 1.5px;
    }

    .btn-outline-danger {
        border-width: 1.5px;
    }

    .btn-group .btn {
        border-radius: 4px;
        padding: 5px 10px;
        font-weight: 500;
    }

    .description-cell {
        max-width: 300px;
    }

    .description-text {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: 14px;
    }

    .badge {
        font-weight: 500;
        padding: 6px 10px;
        font-size: 12px;
    }
</style>
@section Scripts{
    <script src="~/js/product.js"></script>
}