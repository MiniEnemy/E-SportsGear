@model Product

<form method="post" class="bg-light shadow-sm p-4 rounded">
    <input asp-for="Id" hidden />
    <h2 class="text-danger mb-4">Delete Product</h2>
    <p class="mb-3 text-muted">Are you sure you want to delete this product?</p>
    <<div class="mb-3">
        <label asp-for="ProductName" class="form-label fw-bold"> Product Name</label>
        <input asp-for="ProductName" disabled class="form-control" placeholder="Enter product name" />
        <span asp-validation-for="ProductName" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CompanyName" class="form-label fw-bold">Display Order</label>
        <input asp-for="CompanyName" disabled class="form-control" placeholder="Enter display order" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label fw-bold">Display Order</label>
        <input asp-for="Description" disabled class="form-control" placeholder="Enter display order" />
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label fw-bold">Display Order</label>
        <input asp-for="Price" disabled class="form-control" placeholder="Enter display order" />
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-danger px-4 py-2 rounded-pill shadow-sm">Delete</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary px-4 py-2 rounded-pill shadow-sm">
            Cancel
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
