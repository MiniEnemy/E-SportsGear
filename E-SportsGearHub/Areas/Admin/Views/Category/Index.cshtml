@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3 align-items-center">
        <div class="col-md-6">
            <h2 class="fw-bold text-white orbitron">
                <i class="bi bi-list-ul me-2" style="color: #00e5ff;"></i> Category List
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary neon-btn shadow-sm">
                <i class="bi bi-plus-circle-fill me-1"></i> Create New Category
            </a>
        </div>
    </div>

    <div class="card bg-dark border border-secondary shadow-sm mb-4">
        <div class="card-body p-0">
            <table class="table table-dark table-hover mb-0">
                <thead>
                    <tr style="background-color: #2a3354;">
                        <th class="fw-bold ps-4 orbitron text-white" style="width: 60%">Category Name</th>
                        <th class="fw-bold text-center orbitron text-white" style="width: 20%">Display Order</th>
                        <th class="fw-bold text-center orbitron text-white" style="width: 20%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td class="align-middle ps-4 rajdhani text-accent fw-semibold">@obj.Name</td>
                            <td class="align-middle text-center rajdhani text-light">@obj.DisplayOrder</td>
                            <td class="align-middle text-center">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                                       class="btn btn-outline-warning btn-sm mx-1" title="Edit this category">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                                       class="btn btn-outline-danger btn-sm mx-1" title="Delete this category">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #151a30;
        font-family: 'Rajdhani', sans-serif;
        color: #ffffff;
    }

    .orbitron {
        font-family: 'Orbitron', sans-serif;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .rajdhani {
        font-family: 'Rajdhani', sans-serif;
    }

    .text-accent {
        color: #00e5ff;
    }

    .table-dark {
        background-color: transparent;
    }

        .table-dark thead th {
            border-bottom: 2px solid #00e5ff;
            font-size: 14px;
        }

        .table-dark tbody tr:hover {
            background-color: rgba(0, 229, 255, 0.08);
        }

    .card {
        background-color: rgba(42, 51, 84, 0.8);
        border-radius: 8px;
    }

    .btn-primary.neon-btn {
        background-color: #00e5ff;
        border-color: #00e5ff;
        color: #151a30;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary.neon-btn:hover {
            background-color: #00a8e8;
            border-color: #00a8e8;
            transform: translateY(-2px);
            box-shadow: 0 0 10px #00e5ff;
        }

    .btn-outline-warning {
        border-color: #ffc107;
        color: #ffc107;
        font-weight: 500;
    }

        .btn-outline-warning:hover {
            background-color: #ffc107;
            color: #000;
        }

    .btn-outline-danger {
        border-color: #ff3860;
        color: #ff3860;
        font-weight: 500;
    }

        .btn-outline-danger:hover {
            background-color: #ff3860;
            color: #000;
        }

    .btn-group .btn {
        border-radius: 8px;
        padding: 5px 12px;
    }
</style>
