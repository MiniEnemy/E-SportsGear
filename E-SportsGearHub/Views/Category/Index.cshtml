@model List<Category>

<div class="container">
    <div class="row pt-3 align-items-center">
        <div class="col-md-6">
            <h2 class="text-dark fw-bold">
                <i class="bi bi-list-ul"></i> Category List
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-circle-fill"></i> Create New Category
            </a>
        </div>
    </div>
</div>
<table class="table table-hover table-bordered table-striped mt-4">
    <thead class="bg-light text-dark text-center">
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td class="align-middle">@obj.Name</td>
                <td class="align-middle text-center">@obj.DisplayOrder</td>
                <td class="align-middle text-center">
                    <div class="btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning btn-sm mx-1" title="Edit this category">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm mx-1" title="Delete this category">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>